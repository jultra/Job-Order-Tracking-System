.div{:style => "position: relative; top: 75px; z-index:1; left: 275px; width: 80%;"}
  / /header
  / Header
  .breadcrumbs
    .col-sm-4
      .page-header.float-left
        .page-title
          %h3 Rejected Requests
  .content.mt-3
    .animated.fadeIn
      .row
        .col-md-12
          .card
            .card-body
              %table#bootstrap-data-table.table.table-striped.table-bordered
                %thead
                  %tr
                    %th Control Number
                    %th Job Type
                    %th Date Filed
                    %th Actions
                %tbody
                  -@rejected_requests.each do |req|
                    %tr
                      %td= req.control_no
                      %td= req.job_type
                      %td= req.date_filed
                      %td
                        = link_to(job_order_path(req), method: :get, class: 'btn btn-primary') do
                          %i.fa.fa-eye>
                            View
                        = link_to "Delete", "#smallmodal", :class => "btn btn-danger", "data-toggle" => "modal"
                        #smallmodal.modal.fade{"data-backdrop" => "false", "aria-hidden" => "true", "aria-labelledby" => "smallmodalLabel", :role => "dialog", :tabindex => "-1"}
                          .modal-dialog.modal-sm{:role => "document"}
                            .modal-content
                              .modal-header
                                %h5#smallmodalLabel.modal-title Job Order Deletion
                                %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                                  %span{"aria-hidden" => "true"} ×
                              .modal-body
                                %p.text-center
                                  Are you sure you want to permanently delete
                                  %h5.pb-2.display-5.text-center= req.control_no
                                %p.text-center
                                  job order request?
                              .modal-footer
                                = link_to(job_order_path(req), method: :delete, class: 'btn btn-danger') do
                                    Yes
                                %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} No
    / .animated
  / .content
